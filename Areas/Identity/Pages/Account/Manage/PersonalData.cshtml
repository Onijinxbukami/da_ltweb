@page "/user/person-data"
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="mb-3">@ViewData["Title"]</h3>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-body">
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            <p class="text-danger">
                <strong>Warning:</strong> Deleting this data will permanently remove your account, and this cannot be recovered.
            </p>
            <div class="d-grid gap-2">
                <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-2">
                    <button class="btn btn-primary btn-lg" type="submit">Download My Data</button>
                </form>
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger btn-lg" role="button">Delete My Account</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
