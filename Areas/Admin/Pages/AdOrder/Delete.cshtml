@page "/admin/delete-order/{orderId}"
@model do_an_ltweb.Admin.AdOrder.DelateOrderModel
@{
    ViewData["Title"] = "Delete Order";
}

<h2>@ViewData["Title"]</h2>

<p>Are you sure you want to delete this order?</p>

<form method="post">
    <input type="hidden" asp-for="Order.IdOrder" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Return</a>
</form>
