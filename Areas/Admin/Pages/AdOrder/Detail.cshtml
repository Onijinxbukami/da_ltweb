@page "/admin/detail-order/{orderId}"
@model do_an_ltweb.Admin.AdOrder.DetailModel
@{
    ViewData["Title"] = "Order details";
}
<h2>@ViewData["Title"]</h2>

<hr>

<div class="row">
    <div class="col-md-6">
        <h3>Products in order</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>ProductName</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products != null)
                {
                    foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Quantity</td>
                            <td>@product.Price.ToString("N0")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">There are no products in the order.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form method="post" asp-page-handler="ConfirmOrder">
    @if (Model.Order != null && Model.Order.Status == 0)
    {
        <button type="submit" class="btn btn-success">Order confirmation</button>
    }
    <a class="btn btn-primary" asp-page="./Index">Return</a>
</form>

