@page "/admin/category/category-price"
@model do_an_ltweb.Admin.AdCategory.AdCategoryPrice.IndexModel
@{
    ViewData["Title"] = "List CategoryPrice";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<div class="mb-2">
    <a class="btn btn-secondary" asp-page="./Create">Create New CategoryPrice</a>
</div>
<div class="card mb-4">

    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DataTable CategoryPrice
    </div>
    <div class="card-body">
        <table id="datatablesSimple">

            <thead>
                <tr>
                    <th>NameCategoryPrice</th>
                    <th>PriceMin</th>
                    <th>PriceMax</th>
                    <th>Hide</th>
                    <th>Tasks</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>NameCategoryPrice</th>
                    <th>PriceMin</th>
                    <th>PriceMax</th>
                    <th>Hide</th>
                    <th>Tasks</th>
                </tr>
            </tfoot>

            <tbody>
                @foreach (var categoryPrice in Model.CategoryPrices)
                {
                    <tr>
                        <td>@categoryPrice.NameCategory</td>
                        <td>@categoryPrice.PriceMin</td>
                        <td>@categoryPrice.PriceMax</td>
                        <td>@categoryPrice.Hide</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-priceid="@categoryPrice.IdCategory">Update</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-priceid="@categoryPrice.IdCategory">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
