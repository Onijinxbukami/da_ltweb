@page "/admin/category/category-iris-color"
@model do_an_ltweb.Admin.AdCategory.AdCategoryIrisColor.IndexModel
@{
    ViewData["Title"] = "List CategoryIrisColor";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<div class="mb-2">
    <a class="btn btn-secondary" asp-page="./Create">Create New CategoryIrisColor</a>
</div>
<div class="card mb-4">

    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DataTable CategoryIrisColor
    </div>
    <div class="card-body">
        <table id="datatablesSimple">

            <thead>
                <tr>
                    <th>NameCategoryFrameIrisColor</th>
                    <th>Hide</th>
                    <th>Tasks</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>NameCategoryFrameIrisColor</th>
                    <th>Hide</th>
                    <th>Tasks</th>
                </tr>
            </tfoot>

            <tbody>
                @foreach (var categoryIrisColor in Model.CategoryIrisColors)
                {
                    <tr>
                        <td>@categoryIrisColor.NameCategory</td>
                        <td>@categoryIrisColor.Hide</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-iriscolorid="@categoryIrisColor.IdCategory">Update</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-iriscolorid="@categoryIrisColor.IdCategory">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
