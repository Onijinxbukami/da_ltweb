@page "/admin/contacts"
@model do_an_ltweb.Admin.AdContact.IndexModel
@{
    ViewData["Title"] = "List Contact";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<div class="card mb-4">

    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DataTable Contact
    </div>
    <div class="card-body">
        <table id="datatablesSimple">

            <thead>
                <tr>
                    <th>NameUser</th>
                    <th>Email</th>
                    <th>PhoneNumber</th>
                    <th>Time</th>
                    <th>Message</th>
                    <th>Tasks</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>NameUser</th>
                    <th>Email</th>
                    <th>PhoneNumber</th>
                    <th>Time</th>
                    <th>Message</th>
                    <th>Tasks</th>
                </tr>
            </tfoot>

            <tbody>
                @foreach (var contact in Model.Contacts)
                {
                    <tr>
                        <td>@contact.Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.PhoneNumber</td>
                        <td>@contact.Time</td>
                        <td>@contact.Message</td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-contactId="@contact.IdContact">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
