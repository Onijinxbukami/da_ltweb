@page "/admin/delete-contact/{contactId}"
@model do_an_ltweb.Admin.AdContact.DeleteContactModel
@{
    ViewData["Title"] = "Delete Contact";
}

<h2>@ViewData["Title"]</h2>

<p>Are you sure you want to delete this contact?</p>

<form method="post">
    <input type="hidden" asp-for="Contact.IdContact" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Return</a>
</form>
