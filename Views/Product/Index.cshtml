@*@model IEnumerable<do_an_ltweb.Models.Product>*@

@model XTL.Helpers.PagingModel

@{
    ViewData["Title"] = "Product Page";

    string searchString = ViewBag.SearchString;
    //int currentPage = ViewBag.CurrentPage;

    var pagingmodel = new XTL.Helpers.PagingModel()
    {
        currentpage = Model.currentpage,
        countpages = Model.countpages,
        generateUrl = (int? p) => Url.Page("/Product/Index", new { p = p })
    };
}

<!-- Our shop section -->
<div id="about" class="shop home-shop">
    <!-- sidebar + content -->
    <section class="">
        <div class="container">
            <div class="row">

                <!-- sidebar -->
                <div class="col-lg-3">
                    <!-- Toggle button -->
                    <button class="btn btn-outline-secondary mb-3 w-100 d-lg-none"
                            type="button"
                            data-mdb-toggle="collapse"
                            data-mdb-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span>Show filter</span>
                    </button>
                    <!-- Collapsible wrapper -->
                    <div class="collapse card d-lg-block mb-5 bg-white slider-bar" id="navbarSupportedContent">
                        <div class="accordion" id="accordionPanelsStayOpenExample">

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <div class="accordion-button text-dark text-center"
                                         type="button"
                                         data-mdb-toggle="collapse"
                                         data-mdb-target="#panelsStayOpen-collapseOne"
                                         aria-expanded="true"
                                         aria-controls="panelsStayOpen-collapseOne">
                                        RELATED ITEMS
                                    </div>
                                </h2>
                            </div>
                            <hr />

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingTwo">
                                    <div class="accordion-button text-dark bg-white"
                                         type="button"
                                         data-mdb-toggle="collapse"
                                         data-mdb-target="#panelsStayOpen-collapseTwo"
                                         aria-expanded="true"
                                         aria-controls="panelsStayOpen-collapseTwo">
                                        Brands
                                    </div>
                                </h2>
                                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo">
                                    <div class="accordion-body">
                                        <div>
                                            @foreach (var brand in ViewBag.CategoryBrands)
                                            {
                                                @if (brand != null && brand.NameCategory != null)
                                                {
                                                    <!-- Checked checkbox -->
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked1" checked="false" />
                                                        <label class="form-check-label" for="flexCheckChecked1">@brand.NameCategory</label>
                                                        @*<span class="badge badge-secondary float-end">120</span>*@
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingTwo">
                                    <div class="accordion-button text-dark bg-white"
                                         type="button"
                                         data-mdb-toggle="collapse"
                                         data-mdb-target="#panelsStayOpen-collapseTwo"
                                         aria-expanded="true"
                                         aria-controls="panelsStayOpen-collapseTwo">
                                        Frame Styles
                                    </div>
                                </h2>
                                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo">
                                    <div class="accordion-body">
                                        <div>
                                            @foreach (var framestyle in ViewBag.CategoryFrameStyles)
                                            {
                                                @if (framestyle != null && framestyle.NameCategory != null)
                                                {
                                                    <!-- Checked checkbox -->
                                                    <div class="form-check form-check-horizontal">
                                                        <input class="form-check-input-fs" type="checkbox" value="" id="flexCheckChecked1" checked="false" />
                                                        @if (framestyle.ImageUrl != null)
                                                        {
                                                            <img class="form-check-img" src="@framestyle.ImageUrl" />
                                                        }
                                                        <label class="form-check-label" for="flexCheckChecked1">@framestyle.NameCategory</label>
                                                        @*<span class="badge badge-secondary float-end">120</span>*@
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />

                        </div>
                    </div>
                </div>
                <!-- end-sidebar -->
                <!-- content -->
                <div class="col-lg-9">
                    <header class="d-sm-flex align-items-center border-bottom mb-4 pb-3">
                        <strong class="d-block py-2">32 Items found </strong>
                        <div class="ml-auto header-conten-shop">
                            <select class="border-select align-items-center form-select w-auto">
                                @*<select class="card">*@
                                <option value="0">Best match</option>
                                <option value="1">Recommended</option>
                                <option value="2">High rated</option>
                                <option value="3">Randomly</option>
                            </select>
                            @*<div class="btn-group shadow-0 border">
                                    <a href="#" class="btn btn-light" title="List view">
                                        <i class="fa fa-bars fa-lg"></i>
                                    </a>
                                    <a href="#" class="btn btn-light active" title="Grid view">
                                        <i class="fa fa-th fa-lg"></i>
                                    </a>
                                </div>*@
                        </div>
                    </header>

                    <div class="row">
                        @foreach (var product in ViewBag.Products)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6 d-flex">
                                <div class="card w-100 my-2 shadow-2-strong">
                                    <div class="card-conten-shop d-flex px-0 pb-0">
                                        <a href="#!" class="btn border icon-hover px-2 pt-2">
                                            <i class="fa fa-heart fa-lg text-secondary px-1"></i>
                                        </a>
                                    </div>
                                    <img src="@product.ImageUrl" class="card-img-top" />
                                    <a asp-action="Detail" asp-route-id="@product.IdProduct">
                                        <div class="card-body d-flex flex-column">
                                            <h3 class="card-title">@product.Price.ToString("N0")<span class="blu">đ</span></h3>
                                            <p class="card-text">@product.NameProduct</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>

                    <hr />

                    <!-- Pagination -->
                    <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-3">
                        @*<ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>*@
                        <partial name="_PagingXTL" model="@pagingmodel" />

                    </nav>
                    <!-- end Pagination -->
                </div>
            </div>
        </div>
    </section>
    <!-- sidebar + content -->
</div>

